{
  "manifest_version": 3,
  "name": "انتخاب‌گر CSS",
  "version": "1.0.0",
  "description": "انتخاب CSS Selector از صفحات وب و ارسال به بک‌اند.",
  "action": {
    "default_title": "انتخاب‌گر CSS",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
